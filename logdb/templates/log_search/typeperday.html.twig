{% extends 'base.html.twig' %}
{% block title %}Type Per Day{% endblock %}

{% block body %}
    {% include('navigation.html.twig') %}
    <form method="post" class="form-signin">

        {{ form_start(form) }}

        <div>
            {{ form_label(form.startDate, 'Start Date',{'label_attr': {'style': 'color:white'}}) }}
            {{ form_widget(form.startDate) }}
            {{ form_label(form.endDate, 'End Date',{'label_attr': {'style': 'color:white'}}) }}
            {{ form_widget(form.endDate) }}
            {{ form_label(form.logType, 'Log Type',{'label_attr': {'style': 'color:white'}}) }}
            {{ form_widget(form.logType) }}
        </div>
        <div class="col-sm-10">
            <div class="form-group input-group">

                <button class="btn btn-lg btn-primary" type="submit">
                    Search
                </button>
            </div>
        </div>
        {{ form_end(form) }}

    </form>
    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Total Logs</th>
            <th scope="col">Date</th>
        </tr>
        </thead>
        {% set index = 1 %}
        {% for row in entity %}


            <tbody>
            <tr>
                <th scope="row">{{ index }}</th>
                <td>{{ row.total_logs }}</td>
                <td>{{ row.log_insert_date }}</td>
            </tr>
            </tbody>
            {% set index = index + 1 %}
        {% endfor %}
    </table>
{% endblock %}
